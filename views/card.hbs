<h1>Basket</h1>

{{#if courses.length}}
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Number of items</th>
            <th>Action</th>
        </tr>
    </thead> 
 <tbody>

    {{#each courses}}
    <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>
        <button class="btn btm-small">Delete</button>
        </td>
    </tr>
    {{/each}}
 </tbody>
</table>

<p><strong>Price:</strong> <span class="price">{{price}}</span></p>
{{else}}
  <p>Basket is empty</p>
{{/if}}